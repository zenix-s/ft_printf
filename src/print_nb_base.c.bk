#include "../include/ft_printf.h"

int print_nb_base(unsigned long long n, char *base)
{
  int count;
  int base_len;

  count = 0;
  base_len = 0;
  while (base[base_len])
    base_len++;
  if (n >= base_len)
  {
    count += print_nb_base(n / base_len, base);
    count += print_nb_base(n % base_len, base);
  }
  else
  {
    n = base[n];
    write(1, &n, 1);
    count++;
  }
  return (count);
}
